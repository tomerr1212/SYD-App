<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"

    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewKgEachWeek"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:padding="5dp"
        android:text="kg each week"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/spinnerWeeklyGoal"
        app:layout_constraintTop_toBottomOf="@+id/spinnerWeeklyActivity" />

    <Spinner
        android:id="@+id/spinnerWeeklyActivity"
        android:layout_width="270dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"

        android:layout_marginEnd="40dp"
        android:entries="@array/weekly_activity"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextKG" />

    <Spinner
        android:id="@+id/spinnerWeeklyGoal"
        android:layout_width="123dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:entries="@array/weekly_goal"
        android:textAlignment="center"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewWeeklyGoal"
        app:layout_constraintTop_toBottomOf="@+id/spinnerWeeklyActivity" />

    <TextView
        android:id="@+id/SignUpheadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#efe41f"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/editEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTargetWeight"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginTop="148dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Target Weight"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpheadline" />

    <TextView
        android:id="@+id/textViewWeeklyActivity"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:text="Weekly Activity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/spinnerWeeklyActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTargetWeight" />

    <TextView
        android:id="@+id/textViewWeeklyGoal"
        android:layout_width="92dp"
        android:layout_height="34dp"
        android:layout_marginTop="20dp"
        android:text="Weekly goal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/spinnerWeeklyActivity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeeklyActivity" />

    <EditText
        android:id="@+id/editTextKG"
        android:layout_width="91dp"
        android:layout_height="65dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:inputType="number"
        android:text=""

        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/textViewKG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textViewTargetWeight"
        app:layout_constraintTop_toBottomOf="@+id/SignUpheadline" />

    <TextView
        android:id="@+id/textViewKG"
        android:layout_width="64dp"
        android:layout_height="34dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="148dp"
        android:padding="7dp"
        android:text="KG"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpheadline" />

    <TextView
        android:id="@+id/textViewLetsGO"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:layout_marginBottom="100dp"
        android:text="LET'S GO"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:padding="20dp"
        android:textColor="#020202"
        android:background="#0B23A7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

